#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

# run startx if on first tty
if systemctl -q is-active graphical.target && [[ ! $DISPLAY && $XDG_VTNR -eq 1 ]]; then
  exec startx
fi

# alias for displaying images in terminal
alias icat="kitten icat"

# set editor
export EDITOR=nvim

# nvim alias
alias vim='nvim'
alias vi='nvim'

# alias for suckless make
alias slmake='sudo make clean install'

# vpn
alias wireup='sudo wg-quick up fsn1'
alias wiredown='sudo wg-quick down fsn1'

alias suicide="shutdown now"

alias ls='ls -lsa --color=auto'

alias grep='grep --color=auto'

# alias for pacman update
alias pacsyu='sudo pacman -Syu'

export TERM=xterm-256color

# set prompt
export PS1="\[$(tput setaf 33)\]\w \[$(tput setaf 141)\]‚ùØ \[$(tput setaf 14)\]\[$(tput sgr0)\]"
