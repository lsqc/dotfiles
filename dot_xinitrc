# load settings from Xresources
xrdb ~/.Xresources

# set trackpoint speed
~/repos/dotfiles/scripts/trackpad-config.sh

# set monitors
~/repos/dotfiles/scripts/monitor-maxres.sh & 

# set wallpaper
feh --bg-fill .local/share/wallpapers/latest.png & 

# start polybar
#polybar & => replaced with i3bar

# set keyboard layout 
setxkbmap eu

# start notification agent
/usr/lib/notification-daemon-1.0/notification-daemon &

# start polkit
#/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

# set kitty directory
export KITTY_CONFIG_DIRECTORY="~/repos/dotfiles/dot_config/kitty" & 

# start picom
picom --config ~/.config/picom.conf &

# set term env variable
export TERM=xterm-256color

# start lxsession
lxsession &

# start nm applet
nm-applet & 

# start bluetooth applet
blueman-applet &

# start window manager
exec i3
